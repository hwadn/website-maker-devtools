{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
		"target": "es2016",
    "module": "ESNext",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
	"include": ["./src"]
}
