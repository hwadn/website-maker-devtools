{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
		"target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "declaration": true
  },
	"include": ["src"],
  "exclude": ["dist"]
}
